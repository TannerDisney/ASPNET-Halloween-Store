        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CostumeId)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.CostumeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CostumeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
