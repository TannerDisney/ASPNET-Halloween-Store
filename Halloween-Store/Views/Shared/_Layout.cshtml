<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Halloween Store</title>
    <link rel="icon" href="~/Images/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 main-header">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img alt="Pumpkin" src="~/Images/pumpkin.gif" width="25" height="25" /> Halloween Store
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-lg-2 col-lg-auto">
                <h4 class="border-bottom">Our Products</h4>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item text-dark">
                        <a class="nav-link products" asp-area="" asp-controller="Costume" asp-action="Add">Costumes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link products" asp-area="" asp-controller="" asp-action="">Special Effects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link products" asp-area="" asp-controller="" asp-action="">Spooky Movies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link products" asp-area="" asp-controller="" asp-action="">Masks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link products" asp-area="" asp-controller="" asp-action="">Props</a>
                    </li>
                </ul>
            </div>
                <div class="col-lg-6 col-lg-auto">
                    @RenderBody()
                </div>
                <div class="col-lg-3 col-lg-auto">
                    <h4 class="border-bottom">Product of the Day</h4>
                </div>
            </div>
        </div>

    <footer class="border-top footer text-muted bg-white">
        <div class="container" style="color:black;">
            &copy; 2019 - Halloween Store
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
